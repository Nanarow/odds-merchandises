<div id="container" class="container mx-auto">
    <h1 id="admin-title" class="font-bold text-4xl">Admin</h1>
    <p id="report-description">Report</p>
    <h1 id="order-list-title" class="text-2xl font-bold mb-4">รายการสั่งซื้อ</h1>
    
    <div id="table-wrapper" class="overflow-x-auto">
      <table id="order-table" class="min-w-full bg-white border border-gray-300">
        <thead id="table-head">
          <tr id="table-header-row" class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
            <th id="bill-header" class="py-3 px-6 text-left">บิล</th>
            <th id="order-header" class="py-3 px-6 text-left">ออเดอร์</th>
            <th id="quantity-header" class="py-3 px-6 text-center">จำนวนสินค้า</th>
            <th id="total-price-header" class="py-3 px-6 text-right">ราคารวม</th>
            <th id="created-at-header" class="py-3 px-6 text-center">สร้างเมื่อ</th>
            <th id="customer-name-header" class="py-3 px-6 text-left">ชื่อ-นามสกุล</th>
            <th id="phone-header" class="py-3 px-6 text-center">โทร</th>
            <th id="address-header" class="py-3 px-6 text-left">ที่อยู่</th>
          </tr>
        </thead>
         <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td class="border px-4 py-2"><%= order.order_id %></td>
        <td class="border px-4 py-2 text-center"><%= order.quantity %></td>
        <td class="border px-4 py-2 text-right"><%= number_to_currency(order.total_price, unit: "฿") %></td>
        <td class="border px-4 py-2"><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td class="border px-4 py-2"><%= order.fullname %></td>
        <td class="border px-4 py-2 text-center"><%= order.phone_number %></td>
        <td class="border px-4 py-2"><%= order.address %></td>
      </tr>
    <% end %>
  </tbody>
      </table>
    </div>
  </div>