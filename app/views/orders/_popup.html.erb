<!-- Show Popup for Successful Payment -->
<% if flash[:success].present? %>
  <div id="popup" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white p-8 rounded-lg shadow-lg w-11/12 sm:w-3/4 md:w-1/2 lg:w-1/3">
      <!-- Success Message -->
      <p class="text-center text-xl font-semibold text-black mb-4"><%= flash[:success] %></p>
      <!-- Success Icon -->
      <div class="flex justify-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <!-- Circle with Checkmark -->
          <circle cx="12" cy="12" r="11" stroke="green" stroke-width="2" fill="none"/>
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" stroke="green" stroke-width="2"></path>
        </svg>
      </div>
      <!-- Button to Return Home -->
      <div class="text-center">
        <%= link_to "กลับสู่หน้าหลัก", root_path, class: "px-6 py-2 bg-blue-500 text-white rounded-lg" %>
      </div>
    </div>
  </div>
<% end %>

<!-- Show Popup for Unsuccessful Payment -->
<% if flash[:error].present? %>
  <div id="popup" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white p-8 rounded-lg shadow-lg w-11/12 sm:w-3/4 md:w-1/2 lg:w-1/3">
      <!-- Error Message -->
      <p class="text-center text-xl font-semibold text-black mb-4"><%= flash[:error] %></p>
      <!-- Error Icon -->
      <div class="flex justify-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <!-- Circle with X -->
          <circle cx="12" cy="12" r="11" stroke="red" stroke-width="2" fill="none"/>
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 6L18 18M6 18L18 6" stroke="red" stroke-width="2"></path>
        </svg>
      </div>
      <!-- Button to Retry or Return Home -->
      <div class="text-center">
        <%= link_to "กลับสู่หน้าหลัก", root_path, class: "px-6 py-2 bg-red-500 text-white rounded-lg" %>
      </div>
    </div>
  </div>
<% end %>

<!-- Flash Message at the Top -->
<% if flash[:notice].present? %>
  <div id="notice" class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block w-full md:w-2/3 mx-auto">
    <%= flash[:notice] %>
  </div>
<% end %>
